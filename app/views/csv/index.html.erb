<center>	
	<h1> Cadastrar arquivo CSV</h1>
	<legend>
	</legend>
	<%= form_for :pessoas , :url => {:controller => 'csv', :action => 'buscar_pessoas'}  do |f| %>
		<div class="form-inline">
			<%= f.label :arquivo, 'Selecione:' %>
			<%= f.file_field :arquivo,:class => 'btn btn-default' %><br />
			<%= f.select(:empresa_id, Empresa.all.collect {|e| [e.nome, e.id]}, { prompt: "Selecione a Empresa" })%>
			<%= f.submit 'Cadastrar',:class => 'btn btn-default' %>
		</div>
	<% end %>
</center>
      
       