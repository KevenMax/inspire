<center>
  <fieldset>
    <legend>
      <h2>Entrar:</h2>
    </legend>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inline">
  <div class="field">
    <%= f.label 'Email:' %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "Digite seu email", :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.label 'Senha:' %><br />
    <%= f.password_field :password, autocomplete: "off",placeholder: "Digite sua senha",:class => 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me , :class => 'form-control'%>
      <%= f.label 'Lembrar-se?' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Entrar", :class => 'btn btn-default' %>
  </div>
  <legend>
</fieldset>
</div>
<% end %>

<%= render "devise/shared/links" %>
</center>