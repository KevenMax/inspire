<center>
<h2>Cadastrar-se</h2>
  
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="form-inline">

  <div class="field">
    <%= f.label :email, 'Email:' %><br />
    <%= f.email_field :email, autofocus: true, :class => 'form-control', :placeholder => 'Digite seu email' %>
  </div>

  <div class="field">
    <%= f.label :password, 'Senha:' %><br>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres no mÃ­nimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",:class => 'form-control', :placeholder => 'Digite sua senha' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,'Confirmar senha:' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control', :placeholder => 'Confirme sua senha' %>
  </div>

  <div class="actions">
    <%= f.submit "Cadastrar", :class => 'btn btn-default' %>
  </div>
</div>
<% end %>


<%= render "devise/shared/links" %>
</center>
